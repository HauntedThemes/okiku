<!DOCTYPE html>
<html lang="{{lang}}">
<head>

    {{> theme_head}}

    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}

</head>
<body class="{{body_class}} nav-closed">

    <div class="main-container transition-fade" id="swup">
        
        {{> theme_header}}
        
        {{{body}}}

        {{> theme_footer}}
        
        <div class="cursor">
            <div class="cursor__inner cursor__inner--circle"></div>
            <div class="cursor__inner cursor__inner--dot"></div>
        </div>

    </div>

    <!-- Menu Modal -->
    <div class="modal fade" id="menu" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="menu-column bookmarks">
                        <div class="bookmark-container">
                            <p class="no-bookmarks">{{{t "You haven't yet saved any bookmarks. To bookmark a post, just click <i class='far fa-bookmark'></i>."}}}</p>
                        </div>
                    </div>
                    <div class="menu-column navigation">
                        {{navigation}}
                    </div>
                    <div class="menu-column search">
                        <form>
                            <input id="search-field" type="text" placeholder="{{t "Search"}}" autocomplete="off"/>
                        </form>
                        <div id="results" class="loop" data-no-results-description='{{t "Your search did not match any articles. Try something else."}}' data-no-results='{{t "No results were found"}}' data-other='{{t "Other"}}' data-bookmark-article='{{t "Bookmark article"}}' data-remove-bookmark='{{t "Remove bookmark"}}'></div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{!-- Ghost Content API --}}
    <script type="text/javascript" src="https://unpkg.com/@tryghost/content-api@1.0.0/umd/content-api.min.js"></script>

    {{!-- 3rd party scripts --}}
    <script type="text/javascript" src="{{asset "js/libraries.js"}}"></script>
    
    {{!-- Remove this comment to make the date and form validation, in search, bookmarks and subscribe form, translatable.
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/locale/{{lang}}.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/localization/messages_{{lang}}.js"></script>
    --}}
    
    {{!-- The main JavaScript file for Okiku --}}
    {{#if pagination.pages}}
    <script>
        var maxPages = parseInt('{{pagination.pages}}');
    </script>
    {{else}}
    <script>
        function getSum(total, num) { return total + num; }
        var getAllPosts = [ {{#get "tags" limit="all" include="count.posts"}} {{#foreach tags}} {{count.posts}}, {{/foreach}} {{/get}} ];
        var maxPages = Math.ceil(getAllPosts.reduce(getSum)/{{@config.posts_per_page}});
    </script>
    {{/if}}

    <script type="text/javascript" src="{{asset "js/main.js"}}"></script>

    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}
</body>
</html>
